{
  "name": "@gawryco/use-shareable-state",
  "version": "0.0.1",
  "description": "The tiny, typed React hook for URL query string state. Transform your components into shareable, bookmarkable experiences with zero boilerplate.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "media"
  ],
  "keywords": [
    "react",
    "hook",
    "typescript",
    "querystring",
    "url",
    "state",
    "router",
    "navigation",
    "ssr",
    "nextjs",
    "useShareableState",
    "query-params",
    "url-state",
    "bookmarkable",
    "shareable"
  ],
  "author": "Gustavo Gawryszewski",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.7.0",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": ">=17.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@eslint/js": "9.34.0",
    "@types/node": "^24.3.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vitest/coverage-v8": "2.1.9",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.1.6",
    "jsdom": "^25.0.0",
    "lint-staged": "^15.2.9",
    "prettier": "^3.3.3",
    "prettier-plugin-packagejson": "^2.5.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tsup": "^8.1.0",
    "typedoc": "0.28.11",
    "typedoc-plugin-markdown": "4.8.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "8.41.0",
    "vitest": "^2.1.1"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "prepare": "husky",
    "changeset": "changeset",
    "release": "pnpm changeset",
    "version-packages": "changeset version",
    "publish-packages": "changeset publish",
    "docs:clean": "rm -rf docs/api && mkdir -p docs/api",
    "docs:build": "pnpm docs:clean && typedoc --plugin typedoc-plugin-markdown --out docs/api src/index.ts && pnpm docs:setup-pages",
    "docs:setup-pages": "cp README.md docs/index.md && sed -i 's|media/useShareableState.png|../media/useShareableState.png|g' docs/index.md && sed -i 's|(docs/api)|(api)|g' docs/index.md && cp docs/_config.yml docs/api/_config.yml",
    "docs:open": "xdg-open docs/api/README.md || open docs/api/README.md || true"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
